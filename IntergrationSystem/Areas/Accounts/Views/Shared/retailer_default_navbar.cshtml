<div class="navbar navbar-default navbar-fixed-top custom-navbar">
    <div class=".content-panel-fluid">
        <!-- Navigation Header -->
        <div class="navbar-header">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="#" data-activates="slide-out" class="btn btn-raised button-collapse show-on-large" style="margin-left : 5px;"><i class="material-icons pull-right">chevron_right</i></a>
            }
        </div>
        <!-- navigation body -->

        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav navbar-right">
            <li><a href="" withpjax="with-ajax" data-pjax=".content-panel" class="btn navigation-help btn-flat"></a></li>
